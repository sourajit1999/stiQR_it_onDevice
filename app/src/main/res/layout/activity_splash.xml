<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Splash">
  <TextView
      android:id="@+id/welcome_"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="Welcome!"
      android:layout_marginTop="140dp"
      android:paddingLeft="40dp"
      android:textSize="40dp"
      android:textColor="#000000"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/hi_there_"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:text="@string/hi_there_"
      android:textAppearance="@style/hi_there_"
      android:gravity="top"
      android:layout_marginTop="90dp"
      android:textSize="30dp"
      android:paddingLeft="40dp"
      android:paddingTop="5dp"
      android:fontFamily="casual"/>

  <Button
      android:id="@+id/login"
      android:layout_width="130dp"
      android:layout_height="50dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"

      android:layout_marginStart="140dp"
      android:layout_marginEnd="140dp"
      android:layout_marginBottom="260dp"
      android:background="@drawable/custombutton"
      android:elevation="4dp"
      android:gravity="center"
      android:text="Login"
      android:textAllCaps="false"
      android:textSize="20dp" />

  <TextView
      android:id="@+id/useless"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="60dp"
      android:layout_marginEnd="60dp"
      android:layout_marginBottom="200dp"
      android:gravity="center_horizontal"
      android:text="@string/not_a_membe"
      android:textSize="20dp"

      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="stiQR it"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="50dp"
      android:gravity="center"
      android:textSize="25dp"
      android:textColor="#000"
      android:fontFamily="casual"
      android:textStyle="bold"
      />


  <TextView
      android:id="@+id/signup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="100dp"
      android:layout_marginEnd="100dp"
      android:layout_marginBottom="176dp"
      android:fontFamily="casual"
      android:gravity="center_horizontal"
      android:text="Sign up"
      android:textColor="@color/colorblue"
      android:textSize="18dp"
      android:textStyle="bold" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="30dp"
      android:text="Applex Inc."
      android:gravity="center"
      android:textSize="15dp"
      android:textColor="#000000"
      android:fontFamily="cursive"
      android:textStyle="bold"
      />




</RelativeLayout>