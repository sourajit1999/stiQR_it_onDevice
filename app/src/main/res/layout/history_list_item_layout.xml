<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_ripple_list"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-9dp"
            android:padding="2dp"
            android:src="@drawable/ic_bookmark_black_24dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:paddingLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:text="Caption"
            android:textStyle="bold"
            android:textColor="#C9212121"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:paddingLeft="17dp"
            android:paddingTop="6dp"
            android:text="Description"
            android:textStyle="italic"
            android:textColor="#C9212121"
            android:textSize="16sp" />
        </LinearLayout>
        <!--<RelativeLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_toEndOf="@+id/text_layout"-->
            <!--android:layout_marginStart="-30dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:background="#00000000"-->
            <!--android:layout_alignParentTop="true"-->
            <!--&gt;-->
            <!--<ImageButton-->
                <!--android:id="@+id/sharecard"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/custom_ripple_transparent"-->
                <!--android:src="@drawable/ic_share_grey_24dp" />-->
        <!--</RelativeLayout>-->
    </RelativeLayout>

    <TextView
        android:id="@+id/date_text"
        android:gravity="end"
        android:paddingRight="11dp"
        android:text="Date"
        android:textSize="12dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="19sp" />
    </LinearLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>